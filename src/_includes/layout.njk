<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title or site.title }}</title>
    <link href="/css/common.css" rel="stylesheet">
    {% if site.google_analytics %}
    <!-- GA placeholder: site.google_analytics will be injected -->
    {% endif %}
  </head>
  <body id="top" class="solid-nav">
    <nav id="navbar">
      <div class="logo"><a href="/"><img src="/images/logo.png" alt="Datatronic Logo"></a></div>
      <div class="nav-links" id="navLinks">
        <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/products/">Products</a>
        <a href="/catalogue/">Catalogue</a>
        <a href="/applications/">Applications</a>
        <a href="/awards/">Awards</a>
        <a href="/contact/">Contact</a>
        <div class="dropdown">
          <button class="dropdown-btn" data-i18n="language">EN</button>
          <div class="dropdown-content">
            <a href="#" onclick="changeLanguage('en')">EN</a>
            <a href="#" onclick="changeLanguage('ja')">JP</a>
            <a href="#" onclick="changeLanguage('cn')">CN</a>
          </div>
        </div>
      </div>
      <div class="hamburger" onclick="toggleMenu()"><i class="fas fa-bars"></i></div>
    </nav>

    <main class="container" style="padding-top:88px;">
      {{ content | safe }}
    </main>

    <footer class="site-footer" role="contentinfo">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-4 footer-logo" style="text-align:left;"><a href="/"><img src="/images/logo.png" alt="Datatronic Logo"></a></div>
          <div class="col-md-4 footer-links" style="text-align:left;"><ul class="list-unstyled mb-0"><li><a href="/">Home</a></li><li><a href="/products/">Products</a></li><li><a href="/about/">About Us</a></li><li><a href="/catalogue/">Catalogue</a></li><li><a href="/applications/">Applications</a></li><li><a href="/awards/">Awards</a></li></ul></div>
          <div class="col-md-4 footer-contact" style="text-align:left;"><strong>Contact Us</strong><p style="margin:.5rem 0 0;line-height:1.4;">TEL :（852）25648477<br>TEL :（852）61852303<br>WeChat: datatron</p></div>
        </div>
      </div>
    </footer>

    <script src="/js/common.js"></script>
    <script>/* i18n init will be included via per-page script when needed */</script>
  </body>
</html>
